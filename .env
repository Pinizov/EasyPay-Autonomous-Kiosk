# ==============================================
# EASYPAY AUTONOMOUS KIOSK - ENVIRONMENT CONFIG
# ==============================================

# Application
NODE_ENV=production
PORT=5000
LOG_LEVEL=info

# Database (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=easypay_autonomous
DB_USER=easypay_admin
DB_PASSWORD=CHANGE_ME_SecurePassword123!
DB_POOL_MAX=20

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_RedisPassword456!

# JWT Authentication
JWT_SECRET=CHANGE_ME_SuperSecretJWTKey789_MustBe32CharsLong!
JWT_EXPIRES_IN=1h

# AES-256 Encryption
ENCRYPTION_KEY=CHANGE_ME_32CharEncryptionKey123456!

# AI Face Recognition Service
AI_SERVICE_URL=http://ai_service:8000
FACE_TOLERANCE=0.6
FACE_MODEL=large

# EasyPay API Integration
EASYPAY_API_URL=https://api.easypay.bg/v1
EASYPAY_API_KEY=your_easypay_api_key_here
EASYPAY_API_SECRET=your_easypay_api_secret_here
USE_MOCK_EASYPAY=true

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Frontend
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WS_URL=ws://localhost:5000

# Security
SESSION_TIMEOUT_MINUTES=15
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_TO_FILE=true
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Python AI Service
FLASK_ENV=production
REDIS_DB=1
FACE_DATA_DIR=/app/face_data
